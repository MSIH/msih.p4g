@page "/donations/edit/{Id:int}"
@namespace msih.p4g.Client.Features.Donations.Pages
@using msih.p4g.Client.Features.Authentication.Services
@using msih.p4g.Server.Features.DonationService.Interfaces
@using msih.p4g.Server.Features.DonationService.Models
@using msih.p4g.Server.Features.CampaignService.Interfaces
@using msih.p4g.Server.Features.CampaignService.Model
@using msih.p4g.Shared.Dtos
@using System.ComponentModel.DataAnnotations
@inject IDonationService DonationService
@inject ICampaignService CampaignService
@inject AuthService AuthService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>@(IsLoading ? "Loading..." : IsRecurringDonation ? "Edit Donation" : "View Donation")</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    @if (IsLoading)
                    {
                        <span>Loading...</span>
                    }
                    else if (IsRecurringDonation)
                    {
                        <span>Edit @DonationDto.RecurrenceType Donation</span>
                    }
                    else
                    {
                        <span>View Donation</span>
                    }
                </h2>
                <button class="btn btn-outline-secondary" @onclick="NavigateBack">
                    <span class="oi oi-arrow-left"></span> Back to My Donations
                </button>
            </div>

            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger">
                    @ErrorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(SuccessMessage))
            {
                <div class="alert alert-success">
                    @SuccessMessage
                </div>
            }

            @if (IsLoading)
            {
                <!-- Loading State -->
                <div class="d-flex justify-content-center p-4">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (DonationDto != null)
            {
                <!-- Donation Details -->
                <div class="card">
                    <div class="card-body">
                        <EditForm Model="EditModel" OnValidSubmit="SaveChanges">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="text-danger" />

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Donation Type</label>
                                        <input type="text" class="form-control" value="@DonationDto.RecurrenceType" readonly />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Donation Date</label>
                                        <input type="text" class="form-control" value="@DonationDto.CreatedOn.ToString("MMM dd, yyyy")" readonly />
                                    </div>

                                    <div class="mb-3">
                                        <label for="donationAmount" class="form-label">Donation Amount ($)</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input type="number" 
                                                   class="form-control" 
                                                   id="donationAmount"
                                                   @bind="EditModel.DonationAmount"
                                                   step="0.01"
                                                   min="1"
                                                   readonly="@(!IsRecurringDonation)" />
                                        </div>
                                        <ValidationMessage For="@(() => EditModel.DonationAmount)" />
                                    </div>

                                    @if (IsRecurringDonation)
                                    {
                                        <div class="mb-3">
                                            <div class="form-check">
                                                <input class="form-check-input" 
                                                       type="checkbox" 
                                                       id="isActive" 
                                                       @bind="EditModel.IsActive" />
                                                <label class="form-check-label" for="isActive">
                                                    Active Donation
                                                </label>
                                            </div>
                                            <small class="form-text text-muted">
                                                Uncheck to pause @DonationDto.RecurrenceType.ToLower() recurring donation
                                            </small>
                                        </div>
                                    }
                                </div>

                                <div class="col-md-6">
                                    @if (!string.IsNullOrEmpty(DonationDto.CampaignName))
                                    {
                                        <div class="mb-3">
                                            <label class="form-label">Campaign</label>
                                            <input type="text" class="form-control" value="@DonationDto.CampaignName" readonly />
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(DonationDto.DonationMessage))
                                    {
                                        <div class="mb-3">
                                            <label class="form-label">Message</label>
                                            <textarea class="form-control" rows="3" readonly>@DonationDto.DonationMessage</textarea>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(DonationDto.ReferralCode))
                                    {
                                        <div class="mb-3">
                                            <label class="form-label">Referral Code</label>
                                            <input type="text" class="form-control" value="@DonationDto.ReferralCode" readonly />
                                        </div>
                                    }

                                    <div class="mb-3">
                                        <label class="form-label">Transaction Details</label>
                                        <div class="border rounded p-3 bg-light">
                                            @if (DonationDto.PayTransactionFee)
                                            {
                                                <small class="d-block">Transaction Fee: $@DonationDto.PayTransactionFeeAmount.ToString("F2")</small>
                                                <small class="d-block">Total Charged: $@DonationDto.TotalAmount.ToString("F2")</small>
                                                <small class="d-block">Net Donation Received: $@DonationDto.NetDonationAmount.ToString("F2")</small>
                                            }
                                            else
                                            {
                                                <small class="d-block">Transaction Fee: $@DonationDto.PayTransactionFeeAmount.ToString("F2") (deducted from donation)</small>
                                                <small class="d-block">Net Donation Received: $@DonationDto.NetDonationAmount.ToString("F2")</small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-4">
                                <div class="col-12">
                                    @if (IsRecurringDonation)
                                    {
                                        <button type="submit" class="btn btn-primary me-2" disabled="@IsProcessing">
                                            @if (IsProcessing)
                                            {
                                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                            }
                                            Save Changes
                                        </button>
                                        <button type="button" class="btn btn-danger me-2" @onclick="CancelDonation" disabled="@IsProcessing">
                                            Cancel Donation
                                        </button>
                                    }
                                    <button type="button" class="btn btn-secondary" @onclick="NavigateBack">
                                        @(IsRecurringDonation ? "Cancel" : "Close")
                                    </button>
                                </div>
                            </div>
                        </EditForm>
                    </div>
                </div>
            }
            else
            {
                <!-- Not Found -->
                <div class="text-center p-5">
                    <span class="oi oi-warning display-1 text-warning mb-3"></span>
                    <h4 class="text-muted">Donation not found</h4>
                    <p class="text-muted">The donation you're looking for doesn't exist or you don't have permission to view it.</p>
                    <button class="btn btn-primary" @onclick="NavigateBack">
                        <span class="oi oi-arrow-left"></span> Back to My Donations
                    </button>
                </div>
            }
        </div>
    </div>
</div>